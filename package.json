{
    "name": "firestore-multibatch",
    "version": "1.0.0",
    "description": "Drop-in replacement for firebase.firestore.WriteBatch that works without batch operations limit.",
    "private": true,
    "license": "Apache-2.0",
    "homepage": "https://github.com/stpch/firestore-multibatch",
    "repository": "https://github.com/stpch/firestore-multibatch.git",
    "bugs": "https://github.com/stpch/firestore-multibatch/issues",
    "scripts": {
        "lint": "eslint src test",
        "test": "yarn lint && jest --verbose --forceExit",
        "test:ci": "yarn lint && jest --ci --coverageReporters=lcov --forceExit && codecov"
    },
    "devDependencies": {
        "dotenv": "^5.0.1",
        "eslint": "^4.19.1",
        "firebase": "^5.0.3",
        "jest": "^23.0.0"
    },
    "engines": {
        "node": ">= 6.14.0"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2016
        },
        "rules": {
            "arrow-body-style": "off",
            "arrow-parens": "off",
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "default-case": "off",
            "function-paren-newline": "off",
            "indent": "off",
            "max-len": [
                "warn",
                {
                    "code": 80,
                    "tabWidth": 4,
                    "ignoreUrls": true
                }
            ],
            "new-cap": "off",
            "no-confusing-arrow": "off",
            "no-mixed-operators": [
                "error",
                {
                    "allowSamePrecedence": true
                }
            ],
            "no-shadow": "off",
            "no-undef": "off",
            "no-underscore-dangle": "off",
            "no-use-before-define": [
                "error",
                "nofunc"
            ],
            "object-curly-newline": "off",
            "object-curly-spacing": "off",
            "prefer-destructuring": [
                "error",
                {
                    "array": true,
                    "object": true
                },
                {
                    "enforceForRenamedProperties": false
                }
            ],
            "prefer-template": "off",
            "quotes": [
                "error",
                "single",
                {
                    "avoidEscape": true
                }
            ],
            "require-jsdoc": "off",
            "spaced-comment": "off",
            "strict": [
                "error",
                "global"
            ],
            "valid-jsdoc": [
                "error",
                {
                    "prefer": {
                        "returns": "returns"
                    },
                    "requireParamDescription": false,
                    "requireReturn": false,
                    "requireReturnDescription": false
                }
            ]
        }
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.js"
        ],
        "coverageDirectory": "./coverage",
        "coverageReporters": [
            "text-summary",
            "text"
        ],
        "testMatch": [
            "<rootDir>/test/**/*.js"
        ],
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ]
    }
}
